/* pages/activitySign/index.wxss */
.content {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  padding: 0 23rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
  overflow: hidden;
}
.content .select-box {
  width: 100%;
}
.content .select-box .select-current {
  width: 193rpx;
  height: 47rpx;
  background: rgba(255, 146, 149, 1);
  border-radius: 24rpx;
  padding: 0 10rpx;
  margin: auto;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .select-box .select-current image {
  width: 16rpx;
  height: 9rpx;
}
.content .select-box .select-current text {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  margin: 0 10rpx;
}
.content .lists {
  position: relative;
  width: 100%;
  height: 86%;
  overflow: auto;
  background: #ffffff;
  box-shadow: 0rpx 18rpx 24rpx 0rpx rgba(225, 225, 225, 0.44);
  border-radius: 10rpx;
  margin-top: 50rpx;
}
.noData{
  top:200rpx;
}