/* pages/activitySign/detail/index.wxss */
.container .header {
  height: 280rpx;
}
.content {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  padding: 0 23rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  overflow: hidden;
}

.content .tab-content {
  width: 703rpx;
  height:700rpx;
  flex: 1;
  /* overflow: auto; */
  border-top: 1rpx solid #f3f6f7;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
}
.tab-content .tab-item {
  width: 703rpx;
  min-height: 588rpx;
  box-sizing: border-box;
  padding: 20rpx 42rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 18rpx 24rpx 0rpx rgba(241, 241, 241, 0.44);
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
/* .tab-content .act_item{
  margin-bottom: 330rpx;
} */
.tab-content .one {
  border-radius: 0 0 10rpx 10rpx;
  max-height: 588rpx;
  overflow: auto;
}
.tab-content .tab-item .item {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  padding: 45rpx 0;
  border-bottom: 1rpx solid #f3f6f7;
}
.icon2{
  align-self: flex-start;
  width: 41rpx;
  height:37rpx;
}
.tab-content .tab-item .item .item-text{
  flex: 1
}
.tab-content .tab-item .noBorder{
  border:0;
}
.tab-content .tab-item .item text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #8b8b8b;
}
.tab-content .tab-item .item .lable {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #3c3c3c;
}
.tab-content .tab-item .head {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  border-bottom: 1rpx solid #f3f6f7;
  padding-bottom:23rpx;
}
.tab-content .tab-item .head image {
  width: 40rpx;
  height: 40rpx;
}
.tab-content .tab-item .head text {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(48, 48, 48, 1);
}
.tab-content .tab-item .map {
  width: 617rpx;
  height: 239rpx;
  border-radius: 10rpx;
  margin: 32rpx  0;
}
.tab-content .tab-item .map image {
  width: 100%;
  height:100%;
}
.submit{
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}