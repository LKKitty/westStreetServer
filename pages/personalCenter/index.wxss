/* pages/personalCenter/index.wxss */
@import './pes-list/pes-list-tem.wxss';
@import './header-tem/header-tem.wxss';
/* 内容区 */
.content {
  display: block;
  width: 100%;
  padding: 0 23rpx;
  box-sizing: border-box;
  margin-top: -103rpx;
  overflow: auto;
  z-index: 2;
}
.content .lnoData {
  width: 300rpx;
  margin: auto;
  margin-top: 245rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.content .lnoData image {
  width: 269rpx;
  height: 207rpx;
}
.content .lnoData text {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(139, 139, 139, 1);
  line-height: 36rpx;
}

/* 注册 */
.register-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index: 2;
}
.register-content .close-register {
  width: 57rpx;
  height: 57rpx;
  margin-top: 30rpx;
}
.register-content .register {
  width: 573rpx;
  /* padding: 30rpx 0; */
  /* height: 840rpx; */
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 5rpx 54rpx 0rpx rgba(139, 139, 139, 0.5);
  border-radius: 28rpx;
  padding: 50rpx 0;
  box-sizing: border-box;
}
.register-content .register .re-header {
  display: flex;
  justify-content: center;
  align-items: center;
}
.register-content .register .re-header image {
  width: 25rpx;
  height: 25rpx;
  margin: 0 40rpx;
}
.register-content .register .re-header text {
  font-size: 34rpx;
  font-weight: bold;
  color: #ed282a;
}
.register-content .register .re-form {
  margin-top: 10rpx;
  height: 94%;
  overflow: auto;
  padding: 0rpx 60rpx;
  box-sizing: border-box;
}
.register-content .register .re-form .re-input {
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 36rpx 0;
  border-bottom: 1rpx solid rgba(243, 246, 247, 1);
}
picker{
  position: relative;
  height: 40rpx;
  line-height: 50rpx;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
picker .picker {
  position: absolute;
  top:0;
  left:0;
  flex: 1;
  width: 100%;
  font-size: 26rpx;
  font-weight: 500;
  color: #111111;
}
picker .picker .triangle{
  position: absolute;
  right: 0;
  top:20rpx;
  width: 16rpx;
  height: 8rpx;
}
.register-content .register .re-form .re-input image {
  width: 36rpx;
  height: 36rpx;
}
.register-content .register .re-form .re-input .triangle {
  width: 16rpx;
  height: 8rpx;
}
.register-content .register .re-form .re-input input  {
  flex: 1;
  margin-left: 30rpx;
  font-size: 26rpx;
  /* font-weight: 500; */
  color: #111111;
}
.register-content .register .re-form .re-input .com{
  margin-left: 0;
}
.register-content .register .re-form .re-input .mask{
  position: absolute;
  top:0;
  left:0;
  width: 100%;
  height:100%;
  z-index: 2;
}
.register-content .register .re-form .re-input input:placeholder {
  color: #c0c0c0;
}
.register-content .register .re-form .re-input .send-code {
  width: 138rpx;
  height: 38rpx;
  border: 2rpx solid #fc6365;
  border-radius: 19rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.register-content .register .re-form .re-input .send-code text {
  font-size: 22rpx;
  font-weight: 500;
  color: #fc6365;
}
.register-content .register .re-form .submit-box {
  width: 451rpx;
  height: 69rpx;
  background: linear-gradient(
    -90deg,
    rgba(253, 103, 104, 1) 0%,
    rgba(240, 64, 68, 1) 100%
  );
  box-shadow: 0rpx 16rpx 21rpx 0rpx rgba(255, 42, 42, 0.26);
  border-radius: 35rpx;
  text-align: center;
  line-height: 69rpx;
  color: #fff;
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
@keyframes myfirst {
  from {
      height: 0rpx;
      opacity: 0;
  }

  to {
      height: 210rpx;
      opacity: 1;
  }
}

