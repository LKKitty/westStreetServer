/* pages/wishCollection/releasePage/index.wxss */
.container {
  align-items: center;
}
.form-box {
  width: 100%;
  height: 100%;
  overflow: auto;
  margin-top: -280rpx;
  z-index: 2;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
}
.content {
  width: 704rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 18rpx 24rpx 0rpx rgba(241, 241, 241, 0.44);
  border-radius: 10rpx;
  padding: 0 34rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.content .item {
  padding-top: 36rpx;
  border-bottom: 1px solid #f3f6f7;
}
.content .item .tip {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(48, 48, 48, 1);
}
.content .item .input,.content .item textarea {
  height: 66rpx;
  font-size: 28rpx;
  color: rgba(156, 156, 156, 1);
}
.re-input {
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 36rpx 0;
  border-bottom: 1rpx solid rgba(243, 246, 247, 1);
}
picker{
  position: relative;
  height: 40rpx;
  line-height: 50rpx;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
picker .picker {
  position: absolute;
  top:0;
  left:0;
  flex: 1;
  width: 100%;
  font-size: 26rpx;
  font-weight: 500;
  color: #111111;
}
picker .picker .triangle{
  position: absolute;
  right: 0;
  top:20rpx;
  width: 16rpx;
  height: 8rpx;
}
.placeholder {
  font-size: 24rpx;
  font-family: PingFang SC;
  color: rgba(156, 156, 156, 1);
}
.content .item textarea {
  height: 157rpx;
  font-size: 28rpx;
  color: rgba(156, 156, 156, 1);
  margin-top: 10rpx;
}
.content .submit {
  margin: 50rpx  auto;
}