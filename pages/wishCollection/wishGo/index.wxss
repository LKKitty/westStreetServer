/* pages/wishCollection/wishGo/index.wxss */
.container {
  align-items: center;
}
.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100vh;
  z-index: -1;
}
.content {
  position: relative;
  top: 137rpx;
  left: 0;
  width: 748rpx;
  height: 1066rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.contentBg {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.lists {
  position: relative;
  top: 30rpx;
  width: 90%;
  height: 73%;
  /* background: #ccc; */
  overflow: auto;
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-left: -10rpx;
}
.noData {
  position: absolute;
  top: 0;
  left:0;
  bottom: 0;
  right: 0;
  margin: auto;
  width: 100%;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  text-align: center;
  color: white;
}
.list {
  position: relative;
  padding: 20rpx 0;
  display: flex;
  margin-top: -54rpx;
}
.list:first-child{
  margin-top:0;
}
.left,
.right {
  display: table-cell;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.left {
  flex-direction: column;
  margin-top: 20rpx;
}
.left .dot {
  width: 34rpx;
  height: 34rpx;
}
.left .dot_active {
  transition: 1s;
  animation: light 1s infinite;
}
@keyframes light {
  0% {
    opacity: 1;
  }
  50% {
    opacity: .3;
  }
  100% {
    opacity: 1;
  }
}
.left .line {
  flex: 1;
  width: 2rpx;
  height: 100%;
}
.left .line1 {
  flex: 1;
  width: 2rpx;
  height: 100%;
}
.right {
  flex: 1;
  /* height: 98rpx; */
  /* margin-top: -30rpx; */
  box-sizing: border-box;
  margin-left: 30rpx;
  /* flex: 1; */
  flex-direction: row;
  padding: 22rpx 30rpx;
  background: #ffb8b1;
  border-radius: 40rpx 10rpx 10rpx 10rpx;
  margin-bottom: 60rpx;
}
.right .dot_text {
  width: 10rpx;
  height: 10rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 50%;
}
.right text{
  flex: 1;
  margin-left: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 1.5;
  text-align: center;
}
