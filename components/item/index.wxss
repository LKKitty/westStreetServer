/* components/item/index.wxss */
.item {
  position: relative;
  width: 703rpx;
  box-sizing: border-box;
  padding: 0 36rpx;
  height: 229rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 18rpx 24rpx 0rpx rgba(241, 241, 241, 0.44);
  border-radius: 10rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 32rpx;
  box-sizing: border-box
}
.check-item {
  margin-bottom: 0;
  box-shadow: none;
  border-radius: 0;
  -webkit-border-radius: 0;
  -moz-border-radius: 0;
  -ms-border-radius: 0;
  -o-border-radius: 0;
  
}
.item .hr{
  position: absolute;
  bottom:0;
  width: 90%;
  height:2rpx;
  background: #F3F6F7;
}
.item .thum-img {
  width: 185rpx;
  height: 149rpx;
  border-radius: 10rpx;
  object-fit: cover;
  box-shadow: 0rpx 18rpx 24rpx 0rpx rgba(241, 241, 241, 0.44);
}
.item .wish-thum-img {
  width:185rpx;
  height:122rpx;
  border-radius:10rpx;
  box-shadow:0rpx 18rpx 24rpx 0rpx rgba(241,241,241,0.44);
}
.item .right {
  flex: 1;
  margin-left: 30rpx;
  height: 149rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
  /* overflow: hidden; */
}
.item .right .title text {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(48, 48, 48, 1);
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.item .right .dates {
  margin-top: 10rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: #9c9c9c;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
}
.item .right .dates .date {
  color: #ff5353;
  margin-bottom: 2rpx;
}
.item .right .bottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}
.item .right .bottom .count {
  font-size: 18rpx;
  font-weight: 500;
  color: rgba(231, 180, 28, 1);
  background: rgba(250, 250, 250, 1);
  border-radius: 5px;
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  -ms-border-radius: 5px;
  -o-border-radius: 5px;
  padding: 6rpx 16rpx;
}
.item .right .bottom .botton {
  width: 116rpx;
  height: 41prx;
  line-height: 42rpx;
  text-align: center;
  font-size: 24rpx;
  border-radius: 5rpx;
  -webkit-border-radius: 5rpx;
  -moz-border-radius: 5rpx;
  -ms-border-radius: 5rpx;
  -o-border-radius: 5rpx;
}
.item .right .bottom .canel {
  background: linear-gradient(
    -42deg,
    rgba(255, 29, 54, 1),
    rgba(255, 100, 98, 1)
  );
  color: #fff;
}
.item .right .bottom .onsite {
  background: #fff;
  border: 1rpx solid rgba(73, 73, 73, 0.6);
  color: #494949;
}
.item .right .bottom .outsite {
  background: #A6A6A6;
  color: #fff;
}
.wishtext{
  color: #FF5353;
  font-size:24rpx;
}
.wishChick{
  color: #DB3DF2
}