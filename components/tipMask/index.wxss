/* components/tipMask/index.wxss */
.tip-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  z-index: 10;
}
.tip-content {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tipBg {
  width: 80%;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  padding: 63rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.tipBg image {
  width: 163rpx;
  height: 156rpx;
}
.tip-status {
  font-size: 42rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(48, 48, 48, 1);
  margin-top: 40rpx;
}
.tip-msg {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(139, 139, 139, 1);
  margin-top: 34rpx;
  text-align: center;
}
.big-msg {
  width: 80%;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(139, 139, 139, 1);
}
.tip-bot {
  width: 395rpx;
  height: 89rpx;
  background: rgba(255, 103, 102, 1);
  box-shadow: 0rpx 16rpx 21rpx 0rpx rgba(255, 42, 42, 0.26);
  border-radius: 44rpx;
  margin-top: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tip-bot text {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(254, 254, 254, 1);
}
.tip-fail {
  background: rgba(255, 103, 102, 0);
  box-shadow: none;
  border: 1rpx solid rgba(255, 103, 102, 1);
}
.tip-fail text {
  color: #ff6766;
}
